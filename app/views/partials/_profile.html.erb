<div class="profile-panel">
  <h1><%= @user.username %></h1>
  <div class="profile-pic">
    <%= image_tag('/default_profile_img.png', class: 'img-responsive img-rounded profile-img') %>
  </div>
  <div class="about-me">
    <label>Email:</label> <%= @user.email %>
    <h4>About Me</h4>
    <%= @user.about_me %>
    
    <div class="profile-buttons">
      <%= link_to("Edit", edit_path, class: 'btn btn-primary') %> <%= link_to("Delete", profile_path, :method => :delete, data: {confirm: 'Are you sure you want to delete your profile?'}, class: 'btn btn-danger') %>
    </div>
  </div>
</div>