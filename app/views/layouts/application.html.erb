<!DOCTYPE html>
<html>
  <head>
    <title>Character Generator</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if !current_page?(login_path) && !current_page?(signup_path) %>
      <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="nav-container container-fluid">
          <% if current_user %>
            <%= link_to "Profile", profile_path, class: 'btn navbar-btn profile-btn' %>
            <%= link_to "Log Out", logout_path, class: 'btn btn-info navbar-btn' %>
          <% else %>
            <%= link_to "Log In", login_path, class: 'btn btn-info navbar-btn' %>
            <%= link_to "Sign Up", signup_path, class: 'btn btn-info navbar-btn' %>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="page-container container-fluid">
      <div class="row">

        <% if flash[:error] || flash[:notice] || flash[:success] %>
          <% if flash[:error] %>
            <div class="error alert alert-danger" role="alert"><%= flash[:error] %></div>
          <% elsif flash[:notice] %>
            <div class="notice alert alert-info" role="alert"><%= flash[:notice] %></div>
          <% elsif flash[:success] %>
            <div class="notice alert alert-success" role="alert"><%= flash[:success] %></div>
          <% end %>
        <% end %>

        <%= yield %>
      </div>
    </div>
  </body>
</html>
