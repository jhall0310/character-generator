<!DOCTYPE html>
<html>
  <head>
    <title>CharacterGenerator</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if !current_page?(login_path) && !current_page?(signup_path) %>
      <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="nav-container container-fluid">
          <% if current_user %>
            <%= link_to "Profile", profile_path, class: 'btn navbar-btn profile-btn' %>
            <%= link_to "Log Out", logout_path, class: 'btn btn-info navbar-btn' %>
          <% else %>
            <%= link_to "Log In", login_path, class: 'btn btn-info navbar-btn' %>
            <%= link_to "Sign Up", signup_path, class: 'btn btn-info navbar-btn' %>
          <% end %>
        </div>
      </div>
    <% end %>

    <% if flash[:error] %>
      <div class="error alert alert-danger"><%= flash[:error] %></div>
    <% end %>

    <div class="page-container container-fluid">
      <div class="row">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
