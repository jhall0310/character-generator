<div class="col-sm-12 col-md-4 col-md-offset-4 sign-up-form">
  <h1>Sign Up</h1>

  <%= form_for :user, url: users_path, class: 'form-horizontal' do |f| %>
    <div class="form-group">
      <label for='user_username'>Username</label>
      <div class="">
        <%= f.text_field :username, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <label for='user_email'>Email</label>
      <%= f.text_field :email, class: 'form-control' %>
    </div>
    <div class="form-group">
      <label for='user_password'>Password</label>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
    <div class="form-group">
      <label for='user_password_confirmation' class="">Password Confirmation</label>
      <div class="">
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group sign-up-btn">
      <%= f.submit("Sign Up",class: 'btn btn-success') %>
    </div>
  <% end %>
  Already have an account? Log in <%= link_to "here", login_path %>.
</div>