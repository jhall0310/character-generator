<div class="col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-4 sign-up-form">
  <h1>Log In</h1>

  <%= form_for :user, class: 'form-control' do |f| %>
    <div class="form-group">
      <label for='user_username'>Username</label>
      <%= f.text_field :username, class: 'form-control' %>
    </div>
    <div class="form-group">
      <label for='user_password'>Password</label>
      <%= f.password_field :password, class: 'form-control', placeholder: '••••••••' %>
    </div>
    <div class="form-group log-in-btn">
      <%= f.submit("Log In", class: 'btn btn-success') %>
    </div>
  <% end %>
  New? Sign up <%= link_to "here", signup_path %>.
</div>