<div class="col-xs-10 col-xs-offset-1 col-md-8 col-md-offset-2 character-form">
  <h1>Create New Character</h1>

  <%= form_for :character, url: characters_path do |f| %>
    <%= f.hidden_field :user_id, :value => session[:user_id] %>
    <div class="col-md-6">
      <div data-spy="scroll" class="scroll">
        <div class="form-group">
          <label for='character_name'>Name</label>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <% data = JSON.parse(File.read(Dir.pwd + '/reference/levels.json')) %>
          <label for='character_level'>Level</label>
          <%= number_field_tag :level, '1', class: 'form-inline', in: 1..20 %>
          <label for='character_exp'>EXP</label>
          <%= number_field_tag :exp, '0', class: 'form-inline', in: 0..355000 %>
        </div>
        <div class="form-group">
          <label for='character_race'>Race</label>
          <%= render partial: 'partials/character_form_scroll', locals: { file: 'races' } %>
        </div>
        <div class="form-group">
          <label for='character_traits'>Traits</label>
          <div>
            <% data = JSON.parse(File.read(Dir.pwd + '/reference/traits.json')) %>
            <% data['traits'].each do |trait| %>
              <%= trait %>: <%= number_field_tag trait, '10', class: 'form-inline', in: 1..20 %><br>
            <% end %>
          </div>
        </div>
        <div class="form-group">
          <label for='character_background'>Background</label>
          <%= render partial: 'partials/character_form_scroll', locals: { file: 'backgrounds' } %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div data-spy="scroll" class="scroll form-check">
        <p><b>Name:</b> <span class="character_name">---</span></p>
        <p><b>Level:</b> <span class="level">1</span> | <b>EXP:</b> <span class="exp">0</span></p>
        <p><b>Race:</b> <span class="races">--</span></p>
        <p><b>Traits:</b></p>
        <p>Strength: <span class="Strength">10</span></p>
        <p>Dexterity: <span class="Dexterity">10</span></p>
        <p>Constitution: <span class="Constitution">10</span></p>
        <p>Intelligence: <span class="Intelligence">10</span></p>
        <p>Wisdom: <span class="Wisdom">10</span></p>
        <p>Charisma: <span class="Charisma">10</span></p>
        <p><b>Background:</b> <span class="backgrounds">----</span></p>
      </div>
    </div>
    <div class="col-md-12">
      <div class="form-group clearfix create-character-btn">
        <%= f.submit(class: 'btn btn-success') %>
      </div>
    </div>
  <% end %>
</div>